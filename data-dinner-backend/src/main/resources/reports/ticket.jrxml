<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                        http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
    name="ticket" language="java" pageWidth="595" pageHeight="842" columnWidth="555"
    leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20" uuid="46e84f8e-c591-4cbc-959b-3835d12e4099">

    <!-- Parámetros -->
    <parameter name="pedidoId" class="java.lang.Integer"/>
    <parameter name="fecha" class="java.time.LocalDateTime"/>
    <parameter name="mesa" class="java.lang.Integer"/>
    <parameter name="usuario" class="java.lang.String"/>

    <!-- Campos del datasource -->
    <field name="producto.nombre" class="java.lang.String"/>
    <field name="producto.precio" class="java.math.BigDecimal"/>
    <field name="cantidad" class="java.lang.Integer"/>

    <!-- Variables -->
    <variable name="TOTAL" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{producto.precio}.multiply(new java.math.BigDecimal($F{cantidad}))]]></variableExpression>
    </variable>

    <!-- Diseño -->
    <title>
        <band height="50">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Restaurante DataDinner]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="35" width="555" height="15"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA["Pedido #" + $P{pedidoId} + " - Mesa " + $P{mesa}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="20">
            <staticText>
                <reportElement x="0" y="0" width="300" height="20"/>
                <textElement/>
                <text><![CDATA[Producto]]></text>
            </staticText>
            <staticText>
                <reportElement x="300" y="0" width="100" height="20"/>
                <textElement textAlignment="Right"/>
                <text><![CDATA[Cant.]]></text>
            </staticText>
            <staticText>
                <reportElement x="400" y="0" width="155" height="20"/>
                <textElement textAlignment="Right"/>
                <text><![CDATA[Precio]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="300" height="20"/>
                <textFieldExpression><![CDATA[$F{producto.nombre}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="300" y="0" width="100" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{cantidad}]]></textFieldExpression>
            </textField>
            <textField pattern="###0.00">
                <reportElement x="400" y="0" width="155" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{producto.precio}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <summary>
        <band height="50">
            <textField pattern="###0.00">
                <reportElement x="400" y="0" width="155" height="20"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{TOTAL}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="300" y="0" width="100" height="20"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[TOTAL:]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="25" width="555" height="20"/>
                <textFieldExpression><![CDATA["Atendido por: " + $P{usuario} + " - Fecha: " + $P{fecha}]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>
